<!-- Blog Header -->
<section class="relative py-16 sm:py-20 lg:py-24 bg-gradient-to-br from-gray-900 via-purple-900 to-black">
    <div class="absolute inset-0" aria-hidden="true">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(139,92,246,0.1),transparent_50%)]"></div>
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_50%,rgba(59,130,246,0.1),transparent_50%)]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center" data-aos="fade-up">
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-4 sm:mb-6">
                {{#if currentCategory}}
                    {{currentCategory.name}}
                {{else}}
                    Blog & <span class="bg-gradient-to-r from-cyan-400 to-blue-400 bg-clip-text text-transparent">Articles</span>
                {{/if}}
            </h1>
            <p class="text-base sm:text-lg text-gray-300 mb-8">
                {{#if currentCategory}}
                    Khám phá các bài viết về {{currentCategory.name}}
                {{else}}
                    Nơi chia sẻ kiến thức, kinh nghiệm và trải nghiệm công nghệ
                {{/if}}
            </p>

            <!-- Search Bar -->
            <form action="/blog" method="GET" class="max-w-2xl mx-auto">
                <div class="relative">
                    <input type="text" 
                           name="search" 
                           value="{{search}}"
                           placeholder="Tìm kiếm bài viết..." 
                           class="w-full px-6 py-4 bg-gray-800/50 backdrop-blur-sm border border-gray-700 rounded-full text-white placeholder-gray-400 focus:outline-none focus:border-cyan-500 transition-colors">
                    <button type="submit" 
                            class="absolute right-2 top-1/2 -translate-y-1/2 px-6 py-2 bg-gradient-to-r from-cyan-600 to-blue-600 hover:from-cyan-500 hover:to-blue-500 rounded-full text-white font-medium transition-all">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- Categories Filter -->
<section class="py-8 bg-gray-900 border-b border-gray-800">
    <div class="container mx-auto px-4">
        <div class="flex flex-wrap items-center justify-center gap-3" data-aos="fade-up">
            <a href="/blog" 
               class="px-4 py-2 rounded-full text-sm font-medium transition-all {{#unless selectedCategory}}bg-cyan-500 text-white{{else}}bg-gray-800 text-gray-300 hover:bg-gray-700{{/unless}}">
                Tất cả
            </a>
            {{#each categories}}
            <a href="/blog?category={{this.slug}}" 
               class="px-4 py-2 rounded-full text-sm font-medium transition-all {{#ifEqual ../selectedCategory this.slug}}bg-cyan-500 text-white{{else}}bg-gray-800 text-gray-300 hover:bg-gray-700{{/ifEqual}}">
                {{this.name}}
            </a>
            {{/each}}
        </div>
    </div>
</section>

<!-- Blog Posts Grid -->
<section class="py-12 sm:py-16 lg:py-20 bg-gray-900">
    <div class="container mx-auto px-4">
        {{#if posts.length}}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 max-w-7xl mx-auto">
            {{#each posts}}
            <article class="group relative" data-aos="fade-up" data-aos-delay="{{multiply @index 100}}">
                <div class="absolute -inset-0.5 bg-gradient-to-r from-cyan-600 to-blue-600 rounded-2xl blur opacity-30 group-hover:opacity-100 transition duration-500"></div>
                <div class="relative bg-gray-800 rounded-2xl overflow-hidden h-full flex flex-col">
                    <!-- Thumbnail -->
                    <div class="relative aspect-video overflow-hidden">
                        {{#if thumbnail}}
                        <img src="{{thumbnail}}" 
                             alt="{{title}}" 
                             class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                        {{else}}
                        <div class="w-full h-full bg-gradient-to-br from-purple-600 to-blue-600 flex items-center justify-center">
                            <svg class="w-16 h-16 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                            </svg>
                        </div>
                        {{/if}}
                        <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    </div>

                    <!-- Content -->
                    <div class="p-4 sm:p-5 lg:p-6 flex flex-col flex-grow">
                        <!-- Meta -->
                        <div class="flex items-center gap-2 text-gray-400 text-xs sm:text-sm mb-2 sm:mb-3">
                            <svg class="w-4 h-4 text-cyan-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                            </svg>
                            <span>{{formatDate createdAt}}</span>
                            {{#if category}}
                            <span class="ml-2 px-2 py-0.5 bg-cyan-500/20 text-cyan-400 rounded text-xs">{{category.name}}</span>
                            {{/if}}
                        </div>

                        <!-- Title -->
                        <h3 class="text-lg sm:text-xl font-bold text-white mb-2 sm:mb-3 group-hover:text-cyan-400 transition-colors line-clamp-2">
                            {{title}}
                        </h3>

                        <!-- Excerpt -->
                        <p class="text-gray-400 text-sm sm:text-base mb-3 sm:mb-4 flex-grow line-clamp-3">
                            {{excerpt}}
                        </p>

                        <!-- Author & Read More -->
                        <div class="flex items-center justify-between">
                            {{#if author}}
                            <div class="flex items-center gap-2">
                                <div class="w-8 h-8 rounded-full bg-gradient-to-br from-purple-500 to-cyan-500 flex items-center justify-center text-white text-xs font-bold">
                                    {{substring author.name 0 1}}
                                </div>
                                <span class="text-sm text-gray-400">{{author.name}}</span>
                            </div>
                            {{/if}}
                            <a href="/blog/{{slug}}" class="inline-flex items-center gap-2 text-cyan-400 hover:text-cyan-300 font-medium transition-colors group/link text-sm">
                                Đọc
                                <svg class="w-4 h-4 group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            </article>
            {{/each}}
        </div>

        <!-- Pagination -->
        {{#if pagination.showPagination}}
        <div class="mt-12 flex items-center justify-center gap-2" data-aos="fade-up">
            <!-- Previous Button -->
            {{#if pagination.hasPrev}}
            <a href="?page={{subtract pagination.page 1}}{{#if search}}&search={{search}}{{/if}}{{#if selectedCategory}}&category={{selectedCategory}}{{/if}}" 
               class="px-4 py-2 bg-gray-800 hover:bg-gray-700 text-white rounded-lg transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </a>
            {{else}}
            <span class="px-4 py-2 bg-gray-800/50 text-gray-600 rounded-lg cursor-not-allowed">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </span>
            {{/if}}

            <!-- Page Numbers -->
            {{#each pagination.pages}}
            <a href="?page={{this.number}}{{#if ../search}}&search={{../search}}{{/if}}{{#if ../selectedCategory}}&category={{../selectedCategory}}{{/if}}" 
               class="px-4 py-2 rounded-lg font-medium transition-colors {{#if this.isCurrent}}bg-cyan-500 text-white{{else}}bg-gray-800 hover:bg-gray-700 text-gray-300{{/if}}">
                {{this.number}}
            </a>
            {{/each}}

            <!-- Next Button -->
            {{#if pagination.hasNext}}
            <a href="?page={{increment pagination.page}}{{#if search}}&search={{search}}{{/if}}{{#if selectedCategory}}&category={{selectedCategory}}{{/if}}" 
               class="px-4 py-2 bg-gray-800 hover:bg-gray-700 text-white rounded-lg transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </a>
            {{else}}
            <span class="px-4 py-2 bg-gray-800/50 text-gray-600 rounded-lg cursor-not-allowed">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </span>
            {{/if}}
        </div>

        <!-- Pagination Info -->
        <div class="mt-4 text-center text-sm text-gray-400">
            Hiển thị {{pagination.startItem}} - {{pagination.endItem}} trong tổng số {{pagination.totalPosts}} bài viết
        </div>
        {{/if}}

        {{else}}
        <!-- Empty State -->
        <div class="text-center py-16" data-aos="fade-up">
            <svg class="w-24 h-24 mx-auto text-gray-600 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="text-2xl font-bold text-white mb-2">Không tìm thấy bài viết</h3>
            <p class="text-gray-400 mb-6">
                {{#if search}}
                    Không có bài viết nào khớp với từ khóa "{{search}}"
                {{else}}
                    {{#if currentCategory}}
                        Chưa có bài viết nào trong danh mục này
                    {{else}}
                        Chưa có bài viết nào được xuất bản
                    {{/if}}
                {{/if}}
            </p>
            <a href="/blog" class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-cyan-600 to-blue-600 hover:from-cyan-500 hover:to-blue-500 rounded-full text-white font-medium transition-all">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Về trang blog
            </a>
        </div>
        {{/if}}
    </div>
</section>
