    <a href="/admin/projects/create" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center space-x-4">
            <div class="bg-blue-100 rounded-full p-3">
                <i class="fas fa-plus text-blue-600 text-xl"></i>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-700">Add Project</h3>
                <p class="text-xs text-gray-500">Create new project</p>
            </div>
        </div>
    </a>

    <a href="/admin/experiences/create" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center space-x-4">
            <div class="bg-purple-100 rounded-full p-3">
                <i class="fas fa-briefcase text-purple-600 text-xl"></i>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-700">Add Experience</h3>
                <p class="text-xs text-gray-500">Add work experience</p>
            </div>
        </div>
    </a>

    <a href="/admin/technicals/create" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center space-x-4">
            <div class="bg-green-100 rounded-full p-3">
                <i class="fas fa-code text-green-600 text-xl"></i>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-700">Add Skill</h3>
                <p class="text-xs text-gray-500">Add new skill</p>
            </div>
        </div>
    </a>

    <a href="/admin/socials/create" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center space-x-4">
            <div class="bg-yellow-100 rounded-full p-3">
                <i class="fas fa-share-alt text-yellow-600 text-xl"></i>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-700">Add Social</h3>
                <p class="text-xs text-gray-500">Add social link</p>
            </div>
        </div>
    </a>
</div>