<!-- Breadcrumb -->
<nav class="text-gray-500 mb-4">
    <ol class="list-none p-0 inline-flex">
        <li class="flex items-center">
            <i class="fas fa-home"></i>
            <span class="mx-2">/</span>
        </li>
        <li class="text-blue-600">Dashboard</li>
    </ol>
</nav>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <!-- Projects Card -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between mb-4">
            <div class="bg-blue-100 rounded-full p-3">
                <i class="fas fa-project-diagram text-blue-600 text-xl"></i>
            </div>
        </div>
        <h3 class="text-gray-500 text-sm">Total Projects</h3>
        <p class="text-2xl font-semibold">{{stats.totalProjects}}</p>
    </div>

    <!-- Experience Card -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between mb-4">
            <div class="bg-purple-100 rounded-full p-3">
                <i class="fas fa-briefcase text-purple-600 text-xl"></i>
            </div>
        </div>
        <h3 class="text-gray-500 text-sm">Total Experiences</h3>
        <p class="text-2xl font-semibold">{{stats.totalExperiences}}</p>
    </div>

    <!-- Skills Card -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between mb-4">
            <div class="bg-green-100 rounded-full p-3">
                <i class="fas fa-code text-green-600 text-xl"></i>
            </div>
        </div>
        <h3 class="text-gray-500 text-sm">Total Skills</h3>
        <p class="text-2xl font-semibold">{{stats.totalTechnicals}}</p>
    </div>

    <!-- Social Links Card -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between mb-4">
            <div class="bg-yellow-100 rounded-full p-3">
                <i class="fas fa-share-alt text-yellow-600 text-xl"></i>
            </div>
        </div>
        <h3 class="text-gray-500 text-sm">Social Links</h3>
        <p class="text-2xl font-semibold">{{stats.totalSocials}}</p>
    </div>
</div>

<!-- Recent Projects -->
<div class="bg-white rounded-lg shadow-md mb-8">
    <div class="p-6 border-b border-gray-100">
        <h2 class="text-lg font-semibold">Recent Projects</h2>
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thumbnail</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">URL</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {{#if recentProjects.length}}
                    {{#each recentProjects}}
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">{{this.name}}</div>
                            {{#if this.description}}
                            <div class="text-xs text-gray-500">{{substring this.description 0 50}}{{#if (gt this.description.length 50)}}...{{/if}}</div>
                            {{/if}}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {{#if this.thumbnail}}
                            <img src="{{this.thumbnail}}" alt="{{this.name}}" class="w-12 h-12 object-cover rounded">
                            {{else}}
                            <div class="w-12 h-12 bg-gray-200 rounded flex items-center justify-center">
                                <i class="fas fa-image text-gray-400"></i>
                            </div>
                            {{/if}}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {{#if this.url}}
                            <a href="{{this.url}}" target="_blank" class="text-blue-600 hover:text-blue-900 text-sm">
                                <i class="fas fa-external-link-alt"></i> View
                            </a>
                            {{else}}
                            <span class="text-gray-400 text-sm">N/A</span>
                            {{/if}}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{formatDate this.createdAt}}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a href="/admin/projects/{{this._id}}/edit" class="text-blue-600 hover:text-blue-900 mr-2">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/admin/projects/{{this._id}}" class="text-green-600 hover:text-green-900 mr-2">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                {{else}}
                    <tr>
                        <td colspan="5" class="px-6 py-4 text-center text-gray-500">
                            Chưa có dự án nào. <a href="/admin/projects/create" class="text-blue-600 hover:text-blue-900">Thêm dự án mới</a>
                        </td>
                    </tr>
                {{/if}}
            </tbody>
        </table>
    </div>
</div>

<!-- Quick Links -->
