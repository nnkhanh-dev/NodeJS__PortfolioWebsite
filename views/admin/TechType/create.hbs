<h1 class="text-2xl font-bold mb-4">Tạo Mới Loại Kỹ Năng</h1>

<form action="/admin/tech-types/create" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
        <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Tên loại kỹ năng:</label>
        <input type="text" id="name" name="name" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
    </div>
    {{#if error}}
        <p class="text-red-500 text-xs italic">{{error}}</p>
    {{/if}}
    <div class="flex items-center justify-between">
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Thêm</button>
    </div>
</form>