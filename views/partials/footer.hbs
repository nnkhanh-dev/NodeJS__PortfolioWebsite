<footer class="w-full bg-gradient-to-t from-gray-900 via-gray-950 to-black text-white py-8 border-t border-gray-800" role="contentinfo">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
            <!-- Brand -->
            <div class="flex items-center gap-3 mb-4 md:mb-0">
                <img src="{{user.avatar}}" alt="{{user.name}}" class="w-10 h-10 rounded-full border-2 border-pink-500 shadow-md" width="40" height="40">
                <span class="font-bold text-lg tracking-wide"><span class="italic text-blue-300">N</span>KHANH</span>
            </div>
            
            <!-- Social Links -->
            <nav class="flex gap-4 mb-4 md:mb-0" aria-label="Social media links">
                {{#each socials}}
                    <a href="{{this.url}}" class="hover:text-gray-400 transition-colors" aria-label="GitHub profile" rel="noopener noreferrer" target="_blank">
                        {{{this.icon}}}
                    </a>
                {{/each}}
            </nav>
            
            <!-- Copyright -->
            <div class="text-sm text-gray-400 text-center md:text-right">
                <p>&copy; <time datetime="2025">2025</time> Nguyễn Nhật Khánh. All rights reserved.</p>
            </div>
        </div>
    </div>
</footer>