<!-- Header -->
<header class="fixed top-0 right-0 z-40 w-full md:w-[calc(100%-16rem)] bg-white shadow-md">
    <div class="flex items-center justify-between px-4 py-3">
        <button class="md:hidden text-gray-600" onclick="toggleSidebar()">
            <i class="fas fa-bars"></i>
        </button>
        <div class="flex items-center space-x-4">
            <button class="text-gray-600">
                <i class="fas fa-bell"></i>
            </button>
            <div class="relative">
                <button class="flex items-center space-x-2" onclick="toggleDropdown()">
                    <img src="https://ui-avatars.com/api/?name=Admin&background=0D8ABC&color=fff" 
                         alt="Admin" 
                         class="w-8 h-8 rounded-full">
                    <span class="text-gray-700">Admin</span>
                    <i class="fas fa-chevron-down text-gray-600"></i>
                </button>
                <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg hidden" id="dropdown">
                    <a href="/admin/profile" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">
                        <i class="fas fa-user w-5"></i>
                        Profile
                    </a>
                    <a href="/admin/settings" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">
                        <i class="fas fa-cog w-5"></i>
                        Settings
                    </a>
                    <hr class="border-gray-200">
                    <a href="/auth/logout" class="block px-4 py-2 text-red-600 hover:bg-gray-100">
                        <i class="fas fa-sign-out-alt w-5"></i>
                        Logout
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>