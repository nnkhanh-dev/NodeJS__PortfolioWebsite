<script>
let projectsExpanded = false;

function toggleProjects() {
    const hiddenProjects = document.querySelectorAll('.project-item.hidden');
    const btn = document.getElementById('toggle-projects-btn');
    const text = document.getElementById('toggle-projects-text');
    const icon = document.getElementById('toggle-projects-icon');
    
    if (!projectsExpanded) {
        // Show all projects
        hiddenProjects.forEach((project, index) => {
            setTimeout(() => {
                project.classList.remove('hidden');
                project.classList.add('animate-fade-in');
            }, index * 100);
        });
        text.textContent = 'Thu gọn';
        icon.style.transform = 'rotate(180deg)';
        projectsExpanded = true;
    } else {
        // Hide projects after index 5
        const allProjects = document.querySelectorAll('.project-item');
        allProjects.forEach((project, index) => {
            if (index > 5) {
                project.classList.add('hidden');
                project.classList.remove('animate-fade-in');
            }
        });
        text.textContent = 'Xem thêm dự án';
        icon.style.transform = 'rotate(0deg)';
        projectsExpanded = false;
        
        // Scroll to projects section
        document.getElementById('projects').scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
}
</script>

